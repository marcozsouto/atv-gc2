{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "esModuleInterop": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@middlewares/*": ["./src/api/middlewares/*"],
      "@controllers/*": ["./src/api/controllers/*"],
      "@services/*": ["./src/api/services/*"],
      "@helper/*": ["./src/helpers/*"],
      "@routes/*": ["./src/routes/*"],
      "@config/*": ["./src/config/*"],
      "@test/*": ["./src/test/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
